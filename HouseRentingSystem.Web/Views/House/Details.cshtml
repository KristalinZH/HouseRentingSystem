@model HouseDetailsViewModel
@using HouseRentingSystem.Services.Data.Interfaces;
@using HouseRentingSystem.Web.Infrastructure.Extensions;
@inject IAgentService agentService;
@inject IHouseService houseService;
@{
	ViewBag.Title = "House Details";
	string? userId = User.GetId();
	bool isUserAgent = userId != null ? await agentService.AgentExistsByUserIdAsync(userId) : false;
	bool isAgentOwnerOfTheHouse = userId != null ?
		await agentService.HasHouseWithIdAsync(userId, Model.Id) : false;
	bool isHouseRentedByUser = userId != null && isUserAgent ?
		await houseService.IsRentedByUserWithIdAsync(Model.Id, userId) : false;
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container" style="display:inline">
	<div class="row">
		<div class="col-4">
			<img class="card-img-top" style="width: 20rem;"
				 src="@Model.ImageUrl" alt="House Image">
		</div>
		<div class="card col-8 border-0">
			<p style="font-size:25px;"><u>@Model.Title</u></p>
			<p>Located in: <b>@Model.Address</b></p>
			<p>
				Price Per Month:
				<b>@($"{Model.PricePerMonth:f2}") BGN</b>
			</p>
			<p>@Model.Description</p>
			<p>Category: <b>@Model.Category</b></p>
			<p><i>(@(Model.IsRented ? "Rented" : "Not Rented"))</i></p>
			<div class="form-inline">
				@if (this.User?.Identity?.IsAuthenticated ?? false)
				{

					if ((isUserAgent && isAgentOwnerOfTheHouse) || User.IsAdmin())
					{
						<a class="btn btn-warning" asp-controller="House" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
						<a class="ml-2 btn btn-danger" asp-controller="House" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
					}

					@if (!isUserAgent ||User.IsAdmin())
					{
						if (!Model.IsRented)
						{
							<form class="ml-2" asp-controller="House" asp-action="Rent" asp-route-id="@Model.Id"
								  method="post">
								<input class="btn btn-primary" type="submit" value="Rent" />
							</form>
						}
						else
						{
							if (isHouseRentedByUser)
							{
								<form class="ml-2" asp-controller="House" asp-action="Leave" asp-route-id="@Model.Id" method="post">
									<input class="btn btn-primary" type="submit" value="Leave" />
								</form>
							}
						}
					}
				}
			</div>
			<p></p>
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">Agent Info</h5>
					<p class="card-text">Full Name: @Model.Agent.FullName</p>
					<p class="card-text">Email: @Model.Agent.Email</p>
					<p class="card-text">Phone Number: @Model.Agent.PhoneNumber</p>
				</div>
			</div>
		</div>
	</div>
</div>